<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="vertical"
        android:layout_margin="12dp"
        android:background="@drawable/bottom_sheet_background"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="View the details"
            android:gravity="center"
            />

        <TextView
            android:id="@+id/shareTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/baseline_share_24"
            android:drawablePadding="4dp"
            android:text="Share"
            android:textSize="12sp"
            />

        <TextView
            android:id="@+id/commentTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/baseline_comment_24"
            android:drawablePadding="4dp"
            android:text="Comment"
            android:textSize="12sp"
            />

        <TextView
            android:id="@+id/programmingTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/baseline_computer_24"
            android:drawablePadding="4dp"
            android:text="Computer"
            android:textSize="12sp"
            />

        <Button
            android:id="@+id/submitBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="submit"
            />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>